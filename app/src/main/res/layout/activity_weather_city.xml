<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weather_cityActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#BD9993"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加地区"
                android:textSize="55sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请查找你需要的地区，并在下方输入地区名称"/>
            <EditText
                android:id="@+id/EditText_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请查找你需要的地区，并在下方输入地区代码"/>
            <EditText
                android:id="@+id/EditText_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <ListView
                android:id="@+id/ListView_Area_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button_add_backmain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/divider_horizontal_textfield"
                android:layout_weight="3"
                android:text="放弃返回" />

            <Button
                android:id="@+id/button_add_finish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="完成保存"
                android:background="@android:drawable/divider_horizontal_textfield" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>