<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Memo_editActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#BD9993"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_new_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备忘录更改"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextView_memo_old_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原始备忘录内容" />

                <TextView
                    android:id="@+id/TextView_memo_old_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原始备忘录时间" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextView_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/editText_new_memo_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="这里输入备忘录内容" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/TextView_memo_new_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="点击选择日期" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_empty_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/divider_horizontal_textfield"

                    android:text="清空内容" />

                <Button
                    android:id="@+id/button_empty_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/divider_horizontal_textfield"

                    android:text="清空时间" />

                <Button
                    android:id="@+id/button_delete_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/divider_horizontal_textfield"

                    android:text="删除此条记录" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button_change_finish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@android:drawable/divider_horizontal_textfield"
                android:text="确认修改" />

            <Button
                android:id="@+id/button_change_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@android:drawable/divider_horizontal_textfield"
                android:text="取消返回" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>